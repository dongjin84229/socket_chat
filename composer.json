{
  "name": "programmis/socket-chat",
  "description": "Simple socket chat",
  "homepage": "https://github.com/programmis/socket_chat",
  "license": "MIT",
  "type": "extra",
  "require": {
    "react/socket": "^0.4.3",
    "php": ">=7",
    "programmis/colorful-logger": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "codeception/specify": "0.*",
    "codeception/verify": "0.*",
    "codeception/codeception": "2.*",
    "squizlabs/php_codesniffer": "^2.3",
    "codeception/c3": "2.*"
  },
  "authors": [
    {
      "name": "Daniil Sazhin",
      "email": "daniildr22@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "scripts": {
    "post-install-cmd": "php init --env=Development --overwrite=n",
    "post-update-cmd": "php develop_init.php"
  },
  "autoload": {
    "psr-4": {
      "chat\\": "chat"
    }
  }
}
